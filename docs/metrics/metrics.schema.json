{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Virex Competitiveness Metrics",
  "type": "object",
  "required": [
    "apps_in_production",
    "monthly_active_apps",
    "retention_90d",
    "ci_pass_rate",
    "regression_detection_rate",
    "time_to_fix_critical_bug_hours",
    "active_contributors",
    "plugin_count",
    "plugin_certified_count"
  ],
  "properties": {
    "apps_in_production": {"type": "integer", "minimum": 0},
    "monthly_active_apps": {"type": "integer", "minimum": 0},
    "retention_90d": {"type": "number", "minimum": 0, "maximum": 1},
    "ci_pass_rate": {"type": "number", "minimum": 0, "maximum": 1},
    "regression_detection_rate": {"type": "number", "minimum": 0, "maximum": 1},
    "time_to_fix_critical_bug_hours": {"type": "number", "minimum": 0},
    "active_contributors": {"type": "integer", "minimum": 0},
    "plugin_count": {"type": "integer", "minimum": 0},
    "plugin_certified_count": {"type": "integer", "minimum": 0}
  }
}
